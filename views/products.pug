extends layout
block content

  h1.text-center= title
  -let destination3 = `dispatch("/products/create")`
  div.container.text-center
    button.btn(class="btn-primary", onclick=destination3) Create

  - let items = results;
    each item in items
      - let destination0 = `dispatch("/products/detail?id=${item._id}")`
      - let destination1 = `dispatch("/products/update?id=${item._id}")`
      - let destination2 = `dispatch("/products/delete?id=${item._id}")`
        div.container.my-4
          .row.justify-content-center
            .col-8.text-center.bg-light.py-3
              p.product-info Product_Name - #{item.product_name}
              p.product-info Feature - #{item.feature}
              p.product-info Cost - #{item.cost}

              button.btn.btn-info.mx-2.my-2(class="btn-primary", onclick=destination0) Detail
              button.btn.btn-warning.mx-2.my-2(class="btn-primary", onclick=destination1) Update
              button.btn.btn-danger.mx-2.my-2(class="btn-primary", onclick=destination2) Delete
              br
              br
  script.
    function dispatch(path){
      window.location.href=path
    }

